{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio",
  "main": "index.js",
  "scripts": {
    "start:client:prod": "cd client && npm run start:prod",
    "start:client:dev": "cd client && npm run start:dev",
    "build:client:prod": "cd client && npm run build:prod",
    "build:client:dev": "cd client && npm run build:dev",
    "build:database": "firebase-bolt database.rules.bolt",
    "build:functions": "cd functions && run-s lint build",
    "deploy:client:prod": "npm run build:client:prod && firebase deploy --only hosting",
    "deploy:client:dev": "npm run build:client:dev && firebase deploy --only hosting",
    "deploy:database": "firebase deploy --only database",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:prod": "firebase use prod && run-s deploy:client:prod deploy:database deploy:functions && firebase use --clear",
    "deploy:dev": "firebase use dev && run-s deploy:client:dev deploy:database deploy:functions && firebase use --clear",
    "install:client": "cd client && npm install",
    "install:functions": "cd functions && npm install",
    "install": "run-s install:*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://hanselrd@github.com/hanselrd/portfolio.git"
  },
  "author": "Hansel De La Cruz",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/hanselrd/portfolio/issues"
  },
  "homepage": "https://github.com/hanselrd/portfolio#readme",
  "devDependencies": {
    "firebase-bolt": "^0.8.3",
    "npm-run-all": "^4.1.2"
  },
  "private": true
}

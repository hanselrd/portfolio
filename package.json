{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio",
  "main": "index.js",
  "scripts": {
    "start:prod": "cd client && npm run start:prod",
    "start:dev": "cd client && npm run start:dev",
    "build:prod": "cd client && npm run build:prod",
    "build:dev": "cd client && npm run build:dev",
    "build:functions": "cd functions && run-s lint build",
    "deploy:prod": "firebase use prod && npm run build:prod && firebase deploy",
    "deploy:dev": "firebase use dev && npm run build:dev && firebase deploy",
    "install:client": "cd client && npm install",
    "install:functions": "cd functions && npm install",
    "install": "run-s install:*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://hanselrd@github.com/hanselrd/portfolio.git"

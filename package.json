{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio",
  "main": "index.js",
  "scripts": {
    "start": "cd client && npm run start",
    "build:client": "cd client && npm run build",
    "build:database": "cd database && npm run build",
    "build:functions": "cd functions && run-s lint build",
    "deploy:client": "npm run build:client && firebase deploy --only hosting",
    "deploy:database": "firebase deploy --only database",
    "deploy:functions": "firebase deploy --only functions",
    "deploy": "run-s deploy:*",
    "install:client": "cd client && npm install",
    "install:database": "cd database && npm install",
    "install:functions": "cd functions && npm install",
    "install": "run-s install:*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://hanselrd@github.com/hanselrd/portfolio.git"
